<UserControl x:Class="TP2_GN.Views.Registrar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:local="clr-namespace:TP2_GN.Views"
             xmlns:viewmodels="clr-namespace:TP2_GN.ViewModels" 
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1300" >

    <UserControl.Resources>
        <viewmodels:ProfesorViewModel x:Key="profesores"/>
    </UserControl.Resources>

    <Grid DataContext="{Binding Source={StaticResource profesores}}">
        <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="5*" />
        <ColumnDefinition Width="*"/>
    </Grid.ColumnDefinitions>

    <Grid.RowDefinitions>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="*"/>
        <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <!-- titulo -->
    <TextBlock Name="Titulo"
          Grid.Column="1"
          Grid.Row="0"
          VerticalAlignment="Center"
          HorizontalAlignment="Center"
          Text="Registro de profesores"
          FontSize="17"
          FontWeight="DemiBold"
          TextWrapping="Wrap"
          Padding="20"/>

    <!-- formulario -->
        <Border Name="Form"
            Grid.Column="1"
            Grid.Row="1"
            Background="#88adf3"
            CornerRadius="5"
            BorderThickness="1.5"
            BorderBrush="DarkSlateBlue"
            Padding="15"
            MaxWidth="700"
            >

            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                <StackPanel>
                    <Label Content="Nombre/s"/>
                    <TextBox x:Name="txtNombre" Margin="10" HorizontalAlignment="Stretch" MaxLength="50" 
                             Text="{Binding Profesor.Nombre, UpdateSourceTrigger=PropertyChanged}" />

                    <Label Content="Apellido"/>
                    <TextBox x:Name="txtApellido" Margin="10" HorizontalAlignment="Stretch" MaxLength="50" 
                             Text="{Binding Profesor.Apellido, UpdateSourceTrigger=PropertyChanged}"/>

                    <Label Content="Domicilio"/>
                    <TextBox x:Name="txtDomicilio" Margin="10" HorizontalAlignment="Stretch" MaxLength="40" 
                             Text="{Binding Profesor.Domicilio, UpdateSourceTrigger=PropertyChanged}"/>

                    <Label Content="Localidad"/>
                    <TextBox x:Name="txtLocalidad" Margin="10" HorizontalAlignment="Stretch" MaxLength="30" 
                             Text="{Binding Profesor.Localidad, UpdateSourceTrigger=PropertyChanged}"/>

                    <Label Content="Provincia"/>
                    <ComboBox x:Name="cbxProvincia" Margin="10" HorizontalAlignment="Stretch" ItemsSource="{Binding Provincias}"
                                       SelectedItem="{Binding Profesor.Provincia, UpdateSourceTrigger=PropertyChanged}" />

                    <Label Content="Nro. de celular"/>
                    <TextBox x:Name="txtCelular" Margin="10" HorizontalAlignment="Stretch" MaxLength="50" 
                             Text="{Binding Profesor.NroCelular, UpdateSourceTrigger=PropertyChanged}"/>

                    <Label Content="Correo Electrónico"/>
                    <TextBox x:Name="txtEmail" Margin="10" HorizontalAlignment="Stretch" MaxLength="50" 
                             Text="{Binding Profesor.Email, UpdateSourceTrigger=PropertyChanged}"/>

                    <Label Content="Categoría"/>
                    <ComboBox x:Name="cbxCategoria" Margin="10" HorizontalAlignment="Stretch" 
                              ItemsSource="{Binding Categorias}" SelectedItem="{Binding Profesor.Categoria, Mode=TwoWay}" />

                    <Label Content="Materia que dicta"/>
                    <TextBox x:Name="txtMateria" Margin="10" HorizontalAlignment="Stretch" 
                             Text="{Binding Profesor.Materia, UpdateSourceTrigger=PropertyChanged}"/>

                    <Label Content="Nivel de enseñanza"/>
                    <ComboBox x:Name="cbxNivelEnsenanza" Margin="10" HorizontalAlignment="Stretch" 
                              SelectedItem="{Binding Profesor.NivelEnsenanza, UpdateSourceTrigger=PropertyChanged}">
                        <ComboBoxItem Content="Universitario"/>
                        <ComboBoxItem Content="Secundario"/>
                        <ComboBoxItem Content="Primario"/>
                        <ComboBoxItem Content="Inicial"/>
                    </ComboBox>

                    <Label Content="Días que imparte clases"/>
                    <StackPanel x:Name="txtDiasClase" Margin="10">
                        <CheckBox Name="lunesCheckbox" IsChecked="{Binding Profesor.DiasClaseLunes, Mode=TwoWay}" Content="Lunes" />
                        <CheckBox Name="martesCheckbox" IsChecked="{Binding Profesor.DiasClaseMartes, Mode=TwoWay}" Content="Martes" />
                        <CheckBox Name="miercolesCheckbox" IsChecked="{Binding Profesor.DiasClaseMiercoles, Mode=TwoWay}" Content="Miércoles" />
                        <CheckBox Name="juevesCheckbox" IsChecked="{Binding Profesor.DiasClaseJueves, Mode=TwoWay}" Content="Jueves" />
                        <CheckBox Name="viernesCheckbox" IsChecked="{Binding Profesor.DiasClaseViernes, Mode=TwoWay}" Content="Viernes" />
                        <CheckBox Name="sabadoCheckbox" IsChecked="{Binding Profesor.DiasClaseSabado, Mode=TwoWay}" Content="Sábado" />
                    </StackPanel>

                    <Label Content="Turno"/>
                    <StackPanel x:Name="txtTurnos" Margin="10">
                        <CheckBox Content="Mañana" x:Name="mananaCheckbox" 
                                  IsChecked="{Binding Profesor.TurnoManana, UpdateSourceTrigger=PropertyChanged}"/>
                        <CheckBox Content="Tarde" x:Name="tardeCheckbox" 
                                  IsChecked="{Binding Profesor.TurnoTarde, UpdateSourceTrigger=PropertyChanged}"/>
                        <CheckBox Content="Noche" x:Name="nocheCheckbox" 
                                  IsChecked="{Binding Profesor.TurnoNoche, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>
                    
                    
                    <Button Content="Guardar" Width="100" Margin="10" HorizontalAlignment="Center" 
                            Command="{Binding AgregarCommand}"/>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- pie -->
        <TextBlock Grid.Column="1" 
            Grid.Row="2" 
            Text="« Universidad Tecnológica Nacional »" 
            HorizontalAlignment="Center" 
            VerticalAlignment="Center" 
            FontSize="14"
            Foreground="Black" 
            Margin="20,10,20,10"/>


    </Grid>

</UserControl>
